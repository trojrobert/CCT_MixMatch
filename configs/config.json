{
    "name": "CCT",
    "experim_name": "CCT",
    "n_gpu": 1,
    "n_labeled_examples": 1464,
    "diff_lrs": true,
    "ramp_up": 0.1,
    "unsupervised_w": 30,
    "ignore_index": 255,
    "lr_scheduler": "Poly",
    "use_weak_lables":false,
    "weakly_loss_w": 0.4,
    "pretrained": true,
    "year": "2012",
    "num_classes" : 21, 

    "model":{
        "supervised": false,
        "semi": true,
        "supervised_w": 1,

        "sup_loss": "CE",
        "un_loss": "MSE",

        "softmax_temp": 1,
        "aux_constraint": false,
        "aux_constraint_w": 1,
        "confidence_masking": false,
        "confidence_th": 0.5,

        "drop": 6,
        "drop_rate": 0.5,
        "spatial": true,
    
        "cutout": 6,
        "erase": 0.4,
    
        "vat": 2,
        "xi": 1e-6,
        "eps": 2.0,

        "context_masking": 2,
        "object_masking": 2,
        "feature_drop": 6,

        "feature_noise": 6,
        "uniform_range": 0.3
    },


    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 1e-2,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "data_settings":{
        

    },

    "train_supervised": {
        "data_dir": "/home/trojrobert/Documents/Thesis/CCT_MixMatch/data",
        "splits_dir": "/home/trojrobert/Documents/Thesis/CCT_MixMatch/dataloaders/voc_splits",
        "batch_size": 10,
        "crop_size": 32,
        "shuffle": true,
        "base_size": 40,
        "scale": true,
        "augment": true,
        "flip": true,
        "rotate": false,
        "blur": false,
        "colour_attributes" : {
            "brightness": 0.1,
            "contrast": 0.1,
            "saturation": 0.1,
            "hue": 0.1
        },
        "ignore_index": 255,
        "mean": [0.485, 0.456, 0.406],
        "std": [0.229, 0.224, 0.225],
        "split": "train_supervised",
        "num_workers": 8
 
    },

    "train_unsupervised": {
        "data_dir": "/home/trojrobert/Documents/Thesis/CCT_MixMatch/data",
        "splits_dir": "/home/trojrobert/Documents/Thesis/CCT_MixMatch/dataloaders/voc_splits",
        "batch_size": 10,
        "crop_size": 32,
        "shuffle": true,
        "base_size": 40,
        "augment": true,
        "scale": true,
        "flip": true,
        "rotate": false,
        "blur": false,
        "colour_attributes":{
            "brightness": 0.1,
            "contrast": 0.1,
            "saturation": 0.1,
            "hue": 0.1
        },
        "ignore_index": 255,
        "mean": [0.485, 0.456, 0.406],
        "std": [0.229, 0.224, 0.225],
        "split": "train_unsupervised",
        "weak_labels_output": "pseudo_labels/result/pseudo_labels",
        "num_workers": 8
    },

    "val_loader": {
        "data_dir": "/home/trojrobert/Documents/Thesis/CCT_MixMatch/data",
        "splits_dir": "/home/trojrobert/Documents/Thesis/CCT_MixMatch/dataloaders/voc_splits",
        "batch_size": 1,
        "val": true,
        "split": "val",
        "shuffle": false,
        "ignore_index": 255,
        "mean": [0.485, 0.456, 0.406],
        "std": [0.229, 0.224, 0.225],
        "num_workers": 4
    },

    "trainer": {
        "epochs": 1,
        "save_dir": "saved/",
        "save_period": 1,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/",
        "log_per_iter": 20,

        "val": true,
        "val_per_epochs": 5
    }
}
